{
  "name": "Download to Dropbox",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Conveniently download straight into your Dropbox account",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/action19.png",
      "38": "images/action38.png"
    },
    "default_title": "Starting..."
  },
  "minimum_chrome_version": "24",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/folder_contentscript.js"]
    }
  ],
  "permissions": [
    "<all_urls>",

    "chrome://favicon/",
    "contextMenus",
    "notifications",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "optional_permissions": [
  ],
  "background": {
    "scripts": [
      "vendor/js/dropbox.js",
      "js/dropbox_chrome.js",
      "js/download_controller.js",
      "js/dropship_file.js",
      "js/dropship_list.js",
      "js/upload_controller.js",
      "js/event_page.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "images/icon16.png",
    "images/icon48.png",
    "images/icon64.png",
    "images/icon128.png"
  ]
}
